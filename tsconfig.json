{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs", //required for nodejs
        "esModuleInterop": true, //TypeScript will transform import statements to require statements
        "target": "es6",
        "noImplicitAny": true, //enforce strong typing
        "strict":true, //use-strict
        "sourceMap": true, //required for ts debugging, generates .map file
        "outDir": "dist",
        "baseUrl": ".",
        "allowJs": true, //Allow JavaScript files to be compiled.
        "checkJs": true,
        "emitDecoratorMetadata": true, //types information (metadata) for reflect-metadata
        "experimentalDecorators": true,// use decorators es7 feature
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
      ]
}